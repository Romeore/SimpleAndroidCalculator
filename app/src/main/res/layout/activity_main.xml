<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#616060"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1 + 2"
            android:textColor="@color/black"

            android:textSize="46sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">



        <Button
            android:id="@+id/button22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/design_ac"
            android:onClick="deleteDigitFunc"
            android:text="AC"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/design_button"
            android:onClick="numberFunc"
            android:text="0"

            android:textColor="@color/white"
            android:textSize="32sp" />


        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/design_button"
            android:onClick="operandFunc"
            android:text="*"
            android:textColor="@color/white"
            android:textSize="32sp" />


        <Button
            android:id="@+id/buttonEquals"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/design_button"
            android:onClick="operandFunc"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/design_button"
            android:onClick="numberFunc"
            android:text="9"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/design_button"
            android:onClick="numberFunc"
            android:text="8"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/design_button"
            android:onClick="numberFunc"
            android:text="7"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonPlus"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/design_button"
            android:onClick="operandFunc"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/design_button"
            android:onClick="numberFunc"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/design_button"
            android:onClick="numberFunc"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/design_button"
            android:onClick="numberFunc"
            android:text="4"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonMinus"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/design_button"
            android:onClick="operandFunc"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/design_button"
            android:onClick="numberFunc"
            android:text="3"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/design_button"
            android:onClick="numberFunc"
            android:text="2"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"

            android:background="@drawable/design_button"
            android:onClick="numberFunc"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="32sp" />


        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/equals_button"
            android:onClick="resultFunc"
            android:text="="
            android:textSize="32sp" />



    </LinearLayout>

</LinearLayout>